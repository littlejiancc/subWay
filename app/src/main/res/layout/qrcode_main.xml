<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        app:title="详情"
        app:titleTextColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:background="@color/cardview_shadow_start_color"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/image_v"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_v"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="杭州地铁单程票兑换券"
            />
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_v"
            android:layout_below="@id/tv_s"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:text="文泽路"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_start"
            android:layout_below="@id/tv_s"
            android:textColor="#FFFFFF"
            android:text="-"
            />
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv"
            android:layout_below="@id/tv_s"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="西湖文化广场"
            />
        <TextView
            android:id="@+id/tv_p"
            android:layout_below="@id/tv_start"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="界面金额"/>
        <TextView
            android:id="@+id/tv_pr"
            android:layout_below="@id/tv_p"
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="6.00"/>
        <TextView
            android:id="@+id/tv_n"
            android:layout_below="@id/tv_start"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="165dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="张数"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_below="@id/tv_n"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_t"
            android:layout_below="@id/tv_start"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="290dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="类型"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_below="@id/tv_t"
            android:layout_marginLeft="285dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="兑换券"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/image_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
